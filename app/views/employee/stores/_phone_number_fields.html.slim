div.row
  div.large-6.columns
    = f.label "Phone Number"
    = f.text_field :phone_number, :placeholder => "555-444-1234"
  div.large-4.columns
    = f.label "Can this number send and receive text messages (SMS)?"
    div.switch.round.small
      = f.radio_button :smsable, "0", :checked => "checked"
      = f.label "No", :for => "store_phone_number_attributes_0", :onclick => ""
      = f.radio_button :smsable, "1"
      = f.label "Yes", :for => "store_phone_number_attributes_1", :onclick => ""
      span
  div.large-2.columns
    = f.hidden_field :primary, :value => '1'
