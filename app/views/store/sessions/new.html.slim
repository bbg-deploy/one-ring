= provide(:title, 'Sign in')

div.row
  div.large-6.columns#new-session
    = form_for(@store, :url => store_session_path, :method => :post, :html => { :class => 'well' }) do |f|
      fieldset
        legend Login
        = f.text_field :login, :placeholder => "email or username"
        = f.password_field :password
      = f.submit 'Sign in', :class => 'radius button'
    = render "store/shared/authentication_links"