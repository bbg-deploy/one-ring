doctype html
html
  head
    meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    meta name="author" content="Credda Financial Corporation"
    meta name="description" content=full_description
    meta name="keywords" content="lease-to-own"
    title = full_title
    = stylesheet_link_tag :application, :media => "all"
    = csrf_meta_tags
    = yield(:head)
  body[class = body_classes]
    header
      = render 'layouts/header/master'
    div#main-wrapper
      div.row
        h1.hide-for-small = content_for?(:title) ? yield(:title) : "Credda"
        div.large-3.columns.side-nav-container
          ul.side-nav.hide-for-small
            = nav_link image_tag("icons/bank.png"), home_path
            = nav_link "Billpay", home_path
            = nav_link "Payment Methods", home_path
            = nav_link "Something", home_path
          div.row.show-for-small
            div.large-3.columns
              = nav_link image_tag("icons/bank.png"), home_path
            div.large-3.columns
              = nav_link "Billpay", home_path
            div.large-3.columns
              = nav_link "Payment Methods", home_path
            div.large-3.columns
              = nav_link "Something", home_path
        div.large-9.columns
          div[id = page_id]
            = render 'layouts/messages/messages'
            = content_for?(:content) ? yield(:content) : yield
    footer
      = render 'layouts/footer/anonymous_footer'    
    = javascript_include_tag :application, :media => "all"